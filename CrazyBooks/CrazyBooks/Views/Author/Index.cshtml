@model IEnumerable<CrazyBooks_Models.Models.Author>

<div class="container p-3 DivBgForm">
    <div class="row pt-4">
        <div class="col-10">
            <h2 class="text-primary">Authors' List</h2>
        </div>
        <div class="col-2 text-right">
            <a asp-controller="Author" asp-action="Upsert" class="btn btn-success">
                Create New Author
            </a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped border-primary" style="width:100%">
            <thead class="bg-primary">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-striped table-light border-dark border-1">
                @foreach (var item in Model.OrderBy(s => s.LastName))
                {
                    <tr class="text-dark">
                        <td width="30%">@item.LastName</td>
                        <td width="25%">@item.FirstName</td>
                        <td width="25%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-secondary mx-2" asp-controller="Author" asp-action="Detail" asp-route-id="@item.Id">
                                    Details
                                </a><a class="btn btn-warning mx-2"  asp-controller="Author" asp-action="Upsert" asp-route-id="@item.Id">
                                    Edit
                                </a>
                                <a class="btn btn-danger mx-2"  asp-controller="Author" asp-action="Delete" asp-route-id="@item.Id">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    }
    else
    {
        <p>No author exists.</p>
    }
</div>
