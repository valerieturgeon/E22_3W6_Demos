@model IEnumerable<CrazyBooks_Models.Models.Book>

<div class="container p-3 DivBgForm">
  <div class="row pt-4">
    <div class="col-10">
      <h2 class="text-primary">Books</h2>
    </div>
    <div class="col-2 text-right">
      <a asp-controller="Book" asp-action="Upsert" class="btn btn-info">
        Create New Book
      </a>
    </div>
  </div>
  <br /><br />

  @if (Model.Count() > 0)
  {
    <table class="table table-bordered table-striped border-primary" style="width:100%">
      <thead class="bg-primary">
        <tr>
          <th> @Html.DisplayNameFor(model => model.Title)</th>
          <th> @Html.DisplayNameFor(model => model.ISBN)</th>
          <th> @Html.DisplayNameFor(model => model.Price)</th>
          <th> @Html.DisplayNameFor(model => model.Subject.Name)</th>
          <th> @Html.DisplayNameFor(model => model.Publisher.Name)</th>
          <th> @Html.DisplayNameFor(model => model.Publisher.Speciality)</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="table-striped table-light border-dark">
        @foreach (var item in Model.OrderBy(i => i.Title))
        {
        <tr class="text-dark">
          <td width="16%">@item.Title</td>
          <td width="8%">@item.ISBN</td>
          <td width="5%">@item.Price</td>
          <td width="10%">@item.Subject.Name</td>
          <td width="12%">@item.Publisher.Name</td>
          <td width="12%">@item.Publisher.Speciality</td>
          <td width="28%" class="text-center">
            <div class="btn-group" role="group">
              <a class="btn btn-warning mx-2" asp-controller="Book" asp-action="Upsert" asp-route-Id="@item.Id">
                Edit
              </a>
              <a class="btn btn-danger mx-2" asp-controller="Book" asp-action="Delete" asp-route-Id="@item.Id">
                Delete
              </a><br />
              <a class="btn btn-secondary mx-2" asp-controller="Book" asp-action="ManageAuthors" asp-route-Id="@item.Id">
                Authors
              </a>
            </div>
          </td>
        </tr>
        }

      </tbody>
    </table>
  }
  else
  {
    <p>No book exists...</p>}
</div>
