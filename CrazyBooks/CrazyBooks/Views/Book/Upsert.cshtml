@*View basée sur un ViewModel afin de présenter le contenu de plus d'une classe modele'*@
@model CrazyBooks_Models.ViewModels.BookVM

@{ Layout = "~/Views/Shared/_Layout.cshtml";
   var title = "Create a Book"; }

<div class="border p-3 DivBgForm">
    <form class="form-horizontal" method="post">
     
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Book.Id" />
        @if (Model.Book != null)
        {
          //edit
          title = "Edit a Book";

        }
        <div class="col-12 border-bottom">
          <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8  pt-4">
          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.Title"></label>
            </div>
            <div class="col-8">
              <input asp-for="Book.Title" class="form-control" />
              <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-8">
              <input asp-for="Book.ISBN" class="form-control" />
              <span asp-validation-for="Book.ISBN" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.Price"></label>
            </div>
            <div class="col-8">
              <input asp-for="Book.Price" class="form-control text-end" />
              <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.Subject_Id"></label>
            </div>
            <div class="col-8">
              @Html.DropDownListFor(s => s.Book.Subject_Id, Model.SubjectList.OrderBy(s => s.Text), "-Select a Subject",
             new { @class = "form-control" })
              <span asp-validation-for="Book.Subject_Id" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-8 offset-4">

              <div class="row">
                <div class="col">
                  @if (Model.Book == null)
                  {
                    <partial name="_EditAndBackToListButton" model="Model.Book.Id" /> }
                  else
                  {
                    <partial name="_CreateAndBackToListButton" />}
                </div>


                <div class="col">
                  <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>


              </div>
            </div>

            @if (Model.Book == null)
            {
              <div class="col-3 offset-1 pt-4">
                <img src="~/images/Books/CouvertureGrenerique.png" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
              </div>}
          </div>
        </div>
</form>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
