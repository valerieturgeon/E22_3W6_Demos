@model CrazyBooks_Models.ViewModels.BookVM

@{ Layout = "~/Views/Shared/_Layout.cshtml";
   var title = "Create a Book"; }

<div class="border p-3 DivBgForm">
    <form class="form-horizontal" method="post">
      <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Book.Id" />
        @if (Model.Book == null)
        {
          //edit
          title = "Edit a Book";
        }
        <div class="col-12 border-bottom">
          <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8  pt-4">
          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.Title"></label>
            </div>
            <div class="col-8">
              <input asp-for="Book.Title" class="form-control" />
              <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-8">
              <input asp-for="Book.ISBN" class="form-control" />
              <span asp-validation-for="Book.ISBN" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.Price"></label>
            </div>
            <div class="col-8">
              <input type="number" asp-for="Book.Price" class="form-control text-right" />
              <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.PublishedDate"></label>
            </div>
            <div class="col-8">
              <input type="date" asp-for="Book.PublishedDate" value="2021-01-01" class="form-control" />
              <span asp-validation-for="Book.PublishedDate" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.Promo"></label>
            </div>
            <div class="col-8">
              <input type="radio" asp-for="Book.Promo" value="2021-01-01" class="form-control" />
              <span asp-validation-for="Book.Promo" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.Publisher_Id"></label>
            </div>
            <div class="col-8">
              @Html.DropDownListFor(p => p.Book.Publisher_Id, Model.PublisherList.OrderBy(p => p.Text), "-Select a Publisher",
             new { @class = "form-control" })
              <span asp-validation-for="Book.Publisher_Id" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.Subject_Id"></label>
            </div>
            <div class="col-8">
              @Html.DropDownListFor(s => s.Book.Subject_Id, Model.SubjectList.OrderBy(s => s.Text), "-Select a Subject",
             new { @class = "form-control" })
              <span asp-validation-for="Book.Subject_Id" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-4">
              <label asp-for="Book.Resume"></label>
            </div>
            <div class="col-8">
              <textarea asp-for="Book.Resume" class="form-control summernote"></textarea>
              <span asp-validation-for="Book.Resume" class="text-danger"></span>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-8 offset-4">
              @if (Model.Book.Id != 0)
              {
                <partial name="_EditAndBackToListButton" model="Model.Book.Id" /> }
              else
              {
                <partial name="_CreateAndBackToListButton" />}
            </div>
          </div>

          <div class="form-group offset-3 row">
            @if (Model.Book.Id != 0)
            {
              <div class="col-3">
                <img src="@AppConst.ImagePathBooksView@Model.Book.Cover" style="width:350px;height:450px;border-radius:5px; border:1px solid #bbb9b9" />
              </div>}
            else
            {
              <div class="col-3">
                <div style="width:350px;height:450px;border-radius:5px; border:1px solid #bbb9b9"></div>
              </div>}
          </div>
        </div>
      </div>
    </form>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
<script>
    $(document).ready(function () {
      $('.summernote').summernote({
        height: 300
      });
    });

</script>
}
