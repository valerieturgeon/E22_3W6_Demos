@*View directement connectée sur le Modèle*@
@model CrazyBooks_Models.Models.Subject

<div class="border p-3 DivBgForm">
  <form class="form-horizontal" method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
      <h2 class="text-info pl-3">Create a Subject</h2>
      <hr />
    </div>

    <div class="row">
      <div class="col-8">
        <div class="form-group  row p-2">
          <div class="col-2">
            <label asp-for="Name" class="col-form-label"></label>
          </div>
          <div class="col-8">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>


        <div class="form-group row p-2">
          <div class="col-8 offset-2 row">
            <div class="col">
              <button type="submit" class="btn btn-info w-100"><i class="far fa-plus-square"></i> &nbsp;Create </button>
              </div>
            <div class="col">
              <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-th-list"></i>&nbsp;Back to List</a>
            </div>
          </div>
        </div>

      </div>

    </div>

  </form>
</div>

@*Script obligatoire pour mettre en action la validation des annotations*@
@section Scripts{
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}