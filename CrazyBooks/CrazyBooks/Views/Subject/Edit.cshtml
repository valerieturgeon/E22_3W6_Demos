@model CrazyBooks_Models.Models.Subject
 
 <div class="border p-3 DivBgForm">
   <form class="form-horizontal" method="post" asp-action="Edit">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     <input type="hidden" asp-for="Id" />
     <div class="form-group row">
       <h2 class="text-info pl-3">Update a Subject</h2>
       <hr />
     </div>

     <div class="row">
       <div class="col-8">
         <div class="form-group  row p-2">
           <div class="col-2">
             <label asp-for="Name" class="col-form-label"></label>
           </div>
           <div class="col-8">
             <input asp-for="Name" class="form-control" />
             <span asp-validation-for="Name" class="text-danger"></span>
           </div>
         </div>


         <div class="form-group row p-2">
           <div class="col-8 offset-2 row">
             <div class="col">
               <button type="submit" class="btn btn-secondary w-100" value="Update"><i class="fas fa-pen"></i>&nbsp;Update</button>
             </div>
             <div class="col">
               <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-th-list"></i>&nbsp;Back to List</a>
             </div>
           </div>
         </div>

       </div>

     </div>

   </form>
  </div>
 
  @section Scripts{
    @{
      <partial name="_ValidationScriptsPartial" />
    }
  }